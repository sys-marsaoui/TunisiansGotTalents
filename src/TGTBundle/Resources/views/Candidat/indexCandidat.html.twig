{% extends 'profile.html.twig' %}

{% block content %}
    <h1>Candidats list</h1>
    <div class="row align-items-center">
        <div class="col-xl-5 col-md-6">
<div class="progress-table">
        <div class="table-head">
            <div class="serial">#</div>
            <div class="country">Nom</div>
            <div class="visit">Cin</div>
            <div class="percentage">Motivation</div>
            <div class="percentage">@mail</div>
            <div class="percentage">Tel</div>
            <div class="percentage">poursentage</div>
            <div class="percentage">Actions</div>
        </div>
        {% for candidat in candidats %}
        <div class="table-row">
            <div class="serial"><a href="{{ path('candidat_show', { 'id': candidat.id }) }}">{{ candidat.id }}</a> </div>
            <div class="country">{{ candidat.nomC }}</div>
            <div class="visit">{{ candidat.cv }}</div>
            <div class="country">{{ candidat.motivation }}</div>
            <div class="country">{{ candidat.mailaddress }}</div>
            <div class="visit">{{ candidat.tel }}</div>
            <div class="percentage">
                <div class="progress">
                    <div class="progress-bar color-1" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
            <div class="country" ><button class="genric-btn danger-border circle"><a href="{{ path('candidat_delete', { 'id':candidat.id }) }}"> DELETE</a></button>
                <button class="genric-btn success-border circle"> <a href="{{ path('entretien_new') }}">edit</a></button></div>
        </div>
            {% endfor %}
    </div>
</div>
        </div>
    </div>
{% endblock %}