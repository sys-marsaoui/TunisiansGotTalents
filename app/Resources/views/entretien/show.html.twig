{% extends 'base.html.twig' %}

{% block body %}
    <h1>Entretien</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entretien.id }}</td>
            </tr>
            <tr>
                <th>Dateent</th>
                <td>{% if entretien.dateEnt %}{{ entretien.dateEnt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Statutent</th>
                <td>{{ entretien.statutEnt }}</td>
            </tr>
            <tr>
                <th>Noteent</th>
                <td>{{ entretien.noteEnt }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('entretien_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('entretien_edit', { 'id': entretien.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
